// -*- mode: jsonc -*-
{
    "layer": "bottom",
    "position": "top",
    "height": 30,
    "margin-top": 10,
    "margin-left": 15,
    "margin-right": 15,
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
	"custom/distro",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "network",
        "pulseaudio",
        "tray",
        "custom/power"
